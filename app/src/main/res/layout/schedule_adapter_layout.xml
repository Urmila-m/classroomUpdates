<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/elevation"
    app:cardUseCompatPadding="true"
    android:background="@drawable/edit_text_background"
    android:layout_margin="@dimen/elevation"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">

                <TextView
                    android:text="10:15"
                    android:id="@+id/tv_starting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NormalTitleStyle"
                    />

                <TextView
                    android:id="@+id/dash"
                    android:layout_toRightOf="@id/tv_starting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_alignBaseline="@id/tv_starting_time"
                    style="@style/NormalTitleStyle"
                    />

                <TextView
                    android:id="@+id/tv_ending_time"
                    style="@style/NormalTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_starting_time"
                    android:layout_toRightOf="@id/dash"
                    android:text="11:55" />

                    <TextView
                        android:id="@+id/tv_subject_student_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dash"
                        style="@style/NormalTitleStyle"
                        android:text="Subject(Theory)"
                        android:gravity="left"/>



                    <TextView
                        android:id="@+id/tv_teacher_student_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_subject_student_schedule"
                        android:layout_alignLeft="@id/tv_subject_student_schedule"
                        android:text="@string/teacher"
                        android:textSize="@dimen/normal_text_size"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_alignBaseline="@id/tv_teacher_student_schedule"
                        android:layout_toRightOf="@id/tv_teacher_student_schedule"
                        android:id="@+id/tv_location_student_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F_Hall"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>

                    <!--<TextView-->
                        <!--android:layout_marginTop="@dimen/padding_10"-->
                        <!--android:id="@+id/last_updated"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="start"-->
                        <!--android:text="@string/last_updated"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_last_updated_date"-->
                        <!--android:layout_below="@id/last_updated"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="start"-->
                        <!--android:text="@string/date"-->
                        <!--/>-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                >

                <CheckBox
                    android:id="@+id/chk_schedule_attending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:checked="true"
                    />

                <TextView
                    android:id="@+id/attending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attending"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/chk_schedule_attending"
                    />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_width"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/padding_10"
                />

            <Button
                android:id="@+id/btn_update_routine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@id/view_bar"
                android:layout_alignParentRight="true"
                style="@style/ButtonStyle"
                android:text="@string/update"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>
