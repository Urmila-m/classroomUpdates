<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/background_image_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/BaseLayoutStyle">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/subject"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/expected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expected_time"
                style="@style/NormalTitleStyle"
                />

            <TextView
                android:id="@+id/tv_expected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_eg"
                android:layout_toRightOf="@id/expected"
                android:layout_alignBaseline="@id/expected"
                android:textSize="@dimen/normal_text_size"/>

        </RelativeLayout>

        <RadioGroup
            android:layout_marginTop="@dimen/base_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/rb_attend_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/attend" />

            <RadioButton
                android:id="@+id/rb_no_attend_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_attend" />
        </RadioGroup>

        <!--message if not attending-->
        <TextView
            android:id="@+id/message_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NormalTitleStyle"
            android:text="@string/message"
            android:visibility="gone"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_message_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                />
        </android.support.design.widget.TextInputLayout>

        <!--if attending-->
        <TimePicker
            android:id="@+id/tp_teacher"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:timePickerMode="spinner"
            android:background="@color/transparent_white"
            />

        <Button
            android:id="@+id/btn_submit_teacher_attend"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/submit" />

    </LinearLayout>




</RelativeLayout>
