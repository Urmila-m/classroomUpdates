<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/background_image_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/BaseLayoutStyle">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_notice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_year" />

            <Spinner
                android:id="@+id/sp_notice_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:layout_marginBottom="@dimen/padding_10"
                android:entries="@array/year_array"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_part" />

            <Spinner
                android:id="@+id/sp_notice_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:layout_marginBottom="@dimen/padding_10"
                android:entries="@array/part_array"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/program" />

            <Spinner
                android:id="@+id/sp_notice_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:layout_marginBottom="@dimen/padding_10"
                android:entries="@array/program_array"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notice" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_notice_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/lightColorAccent"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:errorTextAppearance="@style/ErrorTextAppearanceStyle"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:hint="@string/your_notice"
                    />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/chek_notice_send_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_sms"
                android:checked="true"/>

        </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_send_notice"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/submit" />

    </LinearLayout>
</RelativeLayout>
